    <TextView
        android:id="@+id/sampleNameTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/sampleNumberTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/sampleAddressTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/sampleEmailTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
